<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>Controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeStudente</servlet-name>
        <servlet-class>Controller.HomeStudente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AvvisoAzienda</servlet-name>
        <servlet-class>Controller.AvvisoAzienda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Error</servlet-name>
        <servlet-class>Controller.Error</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>Controller.HomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>Controller.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>infoAzienda</servlet-name>
        <servlet-class>Controller.infoAzienda</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InternshipBaseController</servlet-name>
        <servlet-class>Controller.InternshipBaseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AmministratoreSecurity</servlet-name>
        <servlet-class>Controller.AmministratoreSecurity</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeStudente</servlet-name>
        <url-pattern>/HomeStudente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AvvisoAzienda</servlet-name>
        <url-pattern>/AvvisoAzienda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/Error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>infoAzienda</servlet-name>
        <url-pattern>/infoAzienda</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InternshipBaseController</servlet-name>
        <url-pattern>/InternshipBaseController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AmministratoreSecurity</servlet-name>
        <url-pattern>/AmministratoreSecurity</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>Template/html</param-value>
    </context-param>
    <context-param>
        <param-name>view.avviso_azienda</param-name>
        <param-value>AvvisoAzienda.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>500.html</param-value>
    </context-param>
    <resource-ref>
        <res-ref-name>jdbc/webdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>homepage</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>500</error-code>
        <location>/Error</location>
    </error-page>
</web-app>
